<%-include("../partials/header")%>
<h1>Edit Thread <%=thread.Thread_name%></h1>
<div class="container">
    <form action="<%=baseUrl%>/<%=thread._id%>?_method=PUT" method="POST">
        <div class="form-group">
            <input class="form-control" type="text" name="Thread_name" value="<%=thread.Thread_name%>">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="Thread_Description" value="<%=thread.Thread_Description%>">
        </div>
        <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Submit!</button>
        </div>
    </form>
    <a href="/" class="btn btn-outline-info">Go Back</a>
</div>
<%-include("../partials/footer")%>