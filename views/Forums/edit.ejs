<%- include("../partials/header")%>
<div class="container">
    <h1>Edit The Forum <%=forum.Forum_name%></h1>
    <form action="/forum/<%=forum._id%>?_method=PUT" method="POST">
        <div class="form-group">
            <input class="form-control" type="text" value="<%=forum.Forum_name%>" name="Forum_name" required>
        </div>
        <div class="form-group">
            <input class="form-control" type="text" value="<%=forum.Forum_description%>" name="Forum_description" maxlength="100">
        </div>
        <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Submit!</button>
        </div>
    </form>
    <a href="/forum" class="btn btn-outline-info">Go Back</a>
</div>
<%-include("../partials/footer")%>