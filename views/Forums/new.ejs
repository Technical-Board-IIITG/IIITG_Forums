<%- include("../partials/header")%>
<div class="container">
    <h1>Add a new forum</h1>
    <form action="/forum" method="POST">
        <div class="form-group">
            <input class="form-control" type="text" name="Forum_name" placeholder="Forum Name" required>
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="Forum_description" placeholder="Forum Description" maxlength="100">
        </div>
        <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Submit!</button>
        </div>
    </form>
    <a href="/forum" class="btn btn-outline-info">Go Back</a>
</div>
<%-include("../partials/footer")%>