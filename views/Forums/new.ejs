<%- include("../partials/header")%>
<h1>New forum will be created here</h1>
<div class="container">
    <form action="/forum" method="POST">
        <div class="form-group">
            <input class="form-control" type="text" name="Forum_name" placeholder="Forum Name">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="Forum_description" placeholder="Forum Description">
        </div>
        <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Submit!</button>
        </div>
    </form>
    <a href="/forum" class="btn btn-outline-info">Go Back</a>
</div>
<%-include("../partials/footer")%>